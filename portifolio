  </div>

  <div class="caption">Foto, Mar e Aventuras</div>
</section>

<script>
  const globe = document.getElementById('globe');
  const photos = document.querySelectorAll('.photo');

  const total = photos.length;
  const radius = 200;

  let rotationY = 0;
  let velocity = 0.015; // velocidade padrão do projeto
  let isDragging = false;
  let lastX = 0;

  // Distribuição automática das fotos no globo
  photos.forEach((photo, i) => {
    const angle = (i / total) * Math.PI * 2;
    photo.dataset.angle = angle;
  });

  function updatePhotos() {
    photos.forEach(photo => {
      const angle = parseFloat(photo.dataset.angle) + rotationY;

      const z = Math.cos(angle);
      const x = Math.sin(angle);

      photo.style.transform = `
        translate(-50%, -50%)
        translateX(${x * radius}px)
        translateZ(${z * radius}px)
      `;

      // BLUR POÉTICO (PROFUNDIDADE)
      const blur = Math.max(0, (1 - z) * 3);
      const opacity = Math.max(0.4, z);

      photo.style.filter = `blur(${blur}px)`;
      photo.style.opacity = opacity;
    });
  }

  function animate() {
    if (!isDragging) rotationY += velocity;
    updatePhotos();
    requestAnimationFrame(animate);
  }

  animate();

  // Desktop interactions
  globe.addEventListener('mouseenter', () => velocity = 0);
  globe.addEventListener('mouseleave', () => velocity = 0.015);

  globe.addEventListener('mousedown', e => {
    isDragging = true;
    lastX = e.clientX;
    globe.style.cursor = 'grabbing';
  });

  window.addEventListener('mouseup', () => {
    isDragging = false;
    globe.style.cursor = 'grab';
  });

  window.addEventListener('mousemove', e => {
    if (!isDragging) return;
    const delta = e.clientX - lastX;
    rotationY += delta * 0.004;
    lastX = e.clientX;
  });

  // Mobile interactions
  globe.addEventListener('touchstart', e => {
    isDragging = true;
    lastX = e.touches[0].clientX;
  });

  globe.addEventListener('touchend', () => isDragging = false);

  globe.addEventListener('touchmove', e => {
    if (!isDragging) return;
    const currentX = e.touches[0].clientX;
    const delta = currentX - lastX;
    rotationY += delta * 0.005;
    lastX = currentX;
  });
</script>

