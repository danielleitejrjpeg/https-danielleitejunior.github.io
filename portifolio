    }

    .globe {
      position: relative;
      width: 320px;
      height: 320px;
      transform-style: preserve-3d;
      cursor: grab;
    }

    @media (min-width: 768px) {
      .globe {
        width: 420px;
        height: 420px;
      }
    }

    .photo {
      position: absolute;
      top: 50%;
      left: 50%;
      width: 140px;
      height: 90px;
      background-size: cover;
      background-position: center;
      border-radius: 6px;
      box-shadow: 0 10px 25px rgba(0,0,0,0.4);
      transform-style: preserve-3d;
      transition: filter 0.4s ease, opacity 0.4s ease;
    }

    @media (min-width: 768px) {
      .photo {
        width: 180px;
        height: 120px;
      }
    }

    .caption {
      position: absolute;
      bottom: 40px;
      text-align: center;
      font-size: 13px;
      letter-spacing: 0.14em;
      text-transform: uppercase;
      opacity: 0.6;
    }
  </style>
